flow_direction[north]=inflow
flow_direction[east]=inflow
flow_direction[south]=inflow
flow_direction[west]=inflow

[land_surface]
swhomogeneous=false
swfreedrainage=true
swwater=true
ktot=4

# Charnock constants are from IFS.
swcharnock=true
alpha_m=0.11
alpha_ch=0.018
# NOTE: we have a single `z0h` and not `z0h` and `z0q` at the moment.
#       from IFS: alpha_h=0.4, alpha_q=0.62.
alpha_h=0.50

[radiation]
swradiation=rrtmgp
swlongwave=true
swshortwave=true
dt_rad=60
t_sfc=290
emis_sfc=0.97
tsi_scaling=1
sfc_alb_dir=0.24
sfc_alb_dif=0.24
swclearskystats=true
swfixedsza=false

[chemistry]
swchemistry=None

[deposition]
swdeposition=None

[fields]
visc=0
svisc=0
rndseed=1
rndamp[thl]=0.1
rndamp[qt]=0.1e-3
rndz=200.0
rndexp=2.0
#slist=None

[buffer]
swbuffer=true
zstart=None
sigma=0.00223
beta=2.0

[force]
swlspres=geo
swtimedep_geo=1
fc=-1
swls=1
swtimedep_ls=true
lslist=thl,qt,u,v
timedeplist_ls=thl,qt,u,v
swwls=local
swtimedep_wls=true
swnudge=1
swtimedep_nudge=true
nudgelist=None
timedeplist_nudge=None

[time]
