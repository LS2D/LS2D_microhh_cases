[master]
npx=None
npy=None
wallclocklimit=1e9

[grid]
swspatialorder=2

itot=None
jtot=None
ktot=None

xsize=None
ysize=None
zsize=None

utrans=0.0
vtrans=0.0

lat=None
lon=None

[advec]
swadvec=2i5
cflmax=1.2
fluxlimit_list=None

[diff]
swdiff=smag2
dnmax=0.25

[thermo]
swthermo=moist
swbasestate=anelastic
swupdatebasestate=true
pbot=1e5

[micro]
swmicro=0
cflmax=1.2
Nc0=500e6
Ni0=10e5

[boundary]
swboundary=surface_lsm
swconstantz0=false
mbcbot=noslip
mbctop=freeslip
sbcbot=flux
sbctop=neumann
